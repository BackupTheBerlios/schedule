<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN" "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>

    <navigation-rule>
        <from-view-id>/pages/login.jsp</from-view-id>
        <navigation-case>
            <from-outcome>usersuccess</from-outcome>
            <to-view-id>/pages/main_new.jsp</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>adminsuccess</from-outcome>
            <to-view-id>/pages/adminmain.jsp</to-view-id>
        </navigation-case>
       
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/pages/login.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/pages/register.jsp</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/pages/login.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/pages/register.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    		<from-view-id>/pages/logout.jsp</from-view-id>
    		<navigation-case>
    			<from-outcome>logoutsuccess</from-outcome>
    			<to-view-id>/pages/index.jsp</to-view-id>
    		</navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/pages/*</from-view-id>
        <navigation-case>
            <from-outcome>startpage</from-outcome>
            <to-view-id>/pages/index.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>messagepage</from-outcome>
            <to-view-id>/pages/messages.jsp</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/pages/main_new.jsp</to-view-id>
        </navigation-case>
         <navigation-case>
            <from-outcome>messages</from-outcome>
            <to-view-id>/pages/messages.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
        	<from-outcome>showmessagepage</from-outcome>
        	<to-view-id>/pages/showmessage.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
        	<from-outcome>newmessagepage</from-outcome>
        	<to-view-id>/pages/newmessage.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
        	<from-outcome>showprojectpage</from-outcome>
        	<to-view-id>/pages/showproject.jsp</to-view-id>
        </navigation-case>
        
        <navigation-case>
        	<from-outcome>tasks</from-outcome>
        	<to-view-id>/pages/tasks.jsp</to-view-id>
        </navigation-case>
        
         <navigation-case>
            <from-outcome>calendar</from-outcome>
            <to-view-id>/pages/calendar.jsp</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>mainpage</from-outcome>
            <to-view-id>/pages/main_new.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
        		<from-outcome>logoutpage</from-outcome>
        		<to-view-id>/pages/logout.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
        		<from-outcome>registerpage</from-outcome>
        		<to-view-id>/pages/register.jsp</to-view-id>
        	</navigation-case>
        	<navigation-case>
        		<from-outcome>loginpage</from-outcome>
        		<to-view-id>/pages/login.jsp</to-view-id>
        	</navigation-case>
        	<navigation-case>
        		<from-outcome>teampage</from-outcome>
        		<to-view-id>/pages/team.jsp</to-view-id>
    		</navigation-case>
    		<navigation-case>
    			<from-outcome>projectspage</from-outcome>
    			<to-view-id>/pages/projects.jsp</to-view-id>
    		</navigation-case>
    		<navigation-case>
    			<from-outcome>addprojectpage</from-outcome>
    			<to-view-id>/pages/addproject.jsp</to-view-id>
    		</navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>showprojectpage</from-outcome>
            <to-view-id>/pages/showproject.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/pages/addproject.jsp</from-view-id>
        <navigation-case>
            <from-outcome>successAdd</from-outcome>
            <to-view-id>/pages/main_new.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <managed-bean>
    		<description>This bean is used for the navigation</description>
    		<managed-bean-name>NavigationBean</managed-bean-name>
    		<managed-bean-class>com.schedule.jsfbeans.NavigationBean</managed-bean-class>
    		<managed-bean-scope>request</managed-bean-scope>
    		<managed-property>
            <property-name>link</property-name>
            <value>#{param.link}</value>
        </managed-property>
    </managed-bean>
    
    <managed-bean>
    		<description>This bean is used for the registration process</description>
    		<managed-bean-name>RegisterBean</managed-bean-name>
    		<managed-bean-class>com.schedule.jsfbeans.RegisterBean</managed-bean-class>
    		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

    <managed-bean>
        <description>Bean which represents a user.</description>
        <managed-bean-name>UserBean</managed-bean-name>
        <managed-bean-class>com.schedule.jsfbeans.UserBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <description>Bean which represents a users login.</description>
        <managed-bean-name>LoginBean</managed-bean-name>
        <managed-bean-class>com.schedule.jsfbeans.LoginBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <description>Bean which represents a usergroup.</description>
        <managed-bean-name>GroupBean</managed-bean-name>
        <managed-bean-class>com.schedule.jsfbeans.GroupBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <description>Bean which represents a project.</description>
        <managed-bean-name>ProjectBean</managed-bean-name>
        <managed-bean-class>com.schedule.jsfbeans.ProjectBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <description>Bean which represents a user role.</description>
        <managed-bean-name>RoleBean</managed-bean-name>
        <managed-bean-class>com.schedule.jsfbeans.RoleBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
     <managed-bean>
        <description>Bean which represents a message.</description>
        <managed-bean-name>MessageBean</managed-bean-name>
        <managed-bean-class>com.schedule.jsfbeans.MessageHandlerBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <description>Bean which represents a task</description>
        <managed-bean-name>TaskBean</managed-bean-name>
        <managed-bean-class>com.schedule.jsfbeans.TaskBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <description>Bean which represents an appointment.</description>
        <managed-bean-name>AppointmentBean</managed-bean-name>
        <managed-bean-class>com.schedule.jsfbeans.AppointmentBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <description>Bean which represents a users preferences.</description>
        <managed-bean-name>PreferenceBean</managed-bean-name>
        <managed-bean-class>com.schedule.jsfbeans.PreferencesBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <description>Bean which represents a projects blackboard.</description>
        <managed-bean-name>BlackboardBean</managed-bean-name>
        <managed-bean-class>com.schedule.jsfbeans.BlackboardBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

</faces-config>

